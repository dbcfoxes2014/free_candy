<div class="container">
	<h1> Selected Media</h1>
	<% @media.each_with_index do |media, index| %>
	<div class="thumbnail_object">

		<input class="selection_checkbox show-check-thumbnail" type="checkbox" id="<%=media.url%>" checked>

		<% if media.url[-4..-1] == ".jpg" %>
			<a href="<%=media.url%>"><img class="fancybox search_result" src="<%=media.url%>" height="240" width="240"></a>
		<% else %>
			<img id="<%=media.url%>" src="/assets/play_icon.png" class="video_thumbnail search_result" width="240" height="240" border="0" style="background:URL(<%= media.thumbnail %>) center center black; background-size: 100%" />
		<% end %>
	</div>
	<% end %>
</div>

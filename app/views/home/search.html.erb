<h1>Search results for '#<%=@search_content%>'</h1>

<div class="container">
	<% @media.each do |media| %>
	  <% if media.type == "image" %>
		<a href=<%=media.images.standard_resolution.url%>><img class="fancybox" src="<%=media.images.standard_resolution.url%>" height="260" width="260"></a>
	  <% elsif media.type == "video" %>
    	  <img class="video_thumbnail" width="260" height="260" src='assets/dog.jpg' id='<%=media.videos.standard_resolution.url%>'>
		  <img class="img-responsive img-thumbnail" center-block src='assets/play_icon.png'>
	  <% end %>
	<% end %>
</div>

  <img src="img.png" />
</div>
